{
  "name": "ai-meeting-assistant-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build:mac": "electron-builder --mac dmg",
    "build:win": "electron-builder --win nsis --x64"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.minashih.ai-meeting-assistant",
    "productName": "AI Meeting Assistant",
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "models/llm",
        "to": "models/llm",
        "filter": [
          "*.gguf"
        ]
      },
      {
        "from": "ollama-models",
        "to": "ollama-models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    }
  }
}
